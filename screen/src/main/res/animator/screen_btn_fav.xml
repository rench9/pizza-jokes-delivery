<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <set>
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleX"
                android:valueTo="1.2"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleY"
                android:valueTo="1.2"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="translationZ"
                android:valueTo="4dp"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleX"
                android:startOffset="70"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleY"
                android:startOffset="70"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="translationZ"
                android:startOffset="70"
                android:valueTo="0dp"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="140"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="alpha"
                android:valueFrom="0.5"
                android:valueTo="1"
                android:valueType="floatType" />

        </set>

    </item>

    <item>
        <set>

            <objectAnimator
                android:duration="140"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="alpha"
                android:valueFrom="0.5"
                android:valueTo="1"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleX"
                android:valueTo="1.2"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleY"
                android:valueTo="1.2"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="translationZ"
                android:valueTo="4dp"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleX"
                android:startOffset="70"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleY"
                android:startOffset="70"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="70"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="translationZ"
                android:startOffset="70"
                android:valueTo="0dp"
                android:valueType="floatType" />
        </set>
    </item>
</selector>